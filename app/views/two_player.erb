<h2>Two Player Game</h2>

<% if player_name %>
  <h4>Welcome <%= player_name %></h4>    
<% else %>
  <%= erb :name %>
<% end %> 

<% if game_on? %>
  <%= erb :choose_move %>
  <% if result %>
    <p>You chose <%= player_selection %>, and <%= opponent_name %> chose <%= opponent_selection %></p> 
    <%= erb :quit %>
  <% else %>
    <p>Waiting for your <%= opponent_name %> to choose...</p>  
  <% end %>
<% else %>
  <p>Waiting for an opponent to join the game...</p>
<% end %>    